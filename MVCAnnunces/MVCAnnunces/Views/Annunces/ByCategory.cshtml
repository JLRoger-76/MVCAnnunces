@model IEnumerable<MVCAnnunces.dal.Entity.Annunce>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>By Category</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card bg-info">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <h6 class="card-title">du  @Html.DisplayFor(modelItem => item.Posted)</h6>
                    @{ if (item.Pictures.FirstOrDefault()!=null)
                            {
                                <img class="card img-thumbnail" src="@Url.Content(item.Pictures.FirstOrDefault().Filename)"
                                     alt="@item.Pictures.FirstOrDefault().PictureId">
                            }
                     }
                    <div class="text-center">
                        @Html.DisplayFor(modelItem => item.Vues) vues<br />
                        @Html.ActionLink("Details", "Details", new { id = item.AnnunceId })
                    </div>
                </div>
            </div>
         }
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
